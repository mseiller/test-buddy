#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Checking code quality..."
npm run lint

# Run type checking
echo "🔧 Checking TypeScript types..."
npm run type-check

# Run tests
echo "🧪 Running tests..."
npm test -- --passWithNoTests

echo "✅ Pre-commit checks passed!"
