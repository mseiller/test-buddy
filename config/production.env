# Production Environment Configuration
# Test Buddy Application

# Kubernetes Configuration
KUBECONFIG_PATH=/path/to/production/kubeconfig
NAMESPACE=test-buddy-production

# Docker Registry
DOCKER_REGISTRY=your-registry.com/testbuddy

# Domain Configuration
DOMAIN=testbuddy.com
WWW_DOMAIN=www.testbuddy.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/testbuddy.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/testbuddy.com.key

# Database Configuration
POSTGRES_HOST=test-buddy-postgres
POSTGRES_PORT=5432
POSTGRES_DB=testbuddy
POSTGRES_USER=testbuddy
POSTGRES_PASSWORD=your-secure-password

# Redis Configuration
REDIS_HOST=test-buddy-redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Firebase Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ELASTICSEARCH_ENABLED=true
JAEGER_ENABLED=true

# Performance Configuration
NODE_ENV=production
LOG_LEVEL=info
CACHE_TTL=3600
MAX_FILE_SIZE=50MB
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security Configuration
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key
SESSION_SECRET=your-session-secret

# CDN Configuration
CDN_ENABLED=true
CDN_DOMAIN=cdn.testbuddy.com
CDN_PROVIDER=cloudflare

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Alerting Configuration
SLACK_WEBHOOK_URL=your-slack-webhook-url
EMAIL_ALERTS_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=alerts@testbuddy.com
EMAIL_PASSWORD=your-email-password

# Scaling Configuration
MIN_REPLICAS=3
MAX_REPLICAS=10
CPU_REQUEST=250m
CPU_LIMIT=500m
MEMORY_REQUEST=256Mi
MEMORY_LIMIT=512Mi

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=3

# Logging Configuration
LOG_AGGREGATION_ENABLED=true
LOG_RETENTION_DAYS=90
LOG_LEVEL=info

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Tracing Configuration
TRACING_ENABLED=true
TRACING_SAMPLING_RATE=0.1
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
